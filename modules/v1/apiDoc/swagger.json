                  }
                },
                "required": ["name", "lastName", "specaility", "laboratoryName", "phoneNumber", "country", "postalCode"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "updateUser success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
